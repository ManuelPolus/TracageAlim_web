@using Tracage.Models
@using TracageAlmentaireWeb.DAL
@model TracageAlmentaireWeb.Models.UserScanRights

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input />

    <div class="form-group">
        @Html.Label("treatment", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                List<Role> listRoles = new List<Role>();
                List<SelectListItem> listItems = new List<SelectListItem>();
                Mapper mapper = new Mapper("FTDb");
                listRoles = mapper.GetRoles();
                foreach (var role in listRoles)
                {
                    listItems.Add(new SelectListItem { Text = role.Name, Value = role.Id.ToString() });
                }
            }

            @Html.DropDownListFor(model => model.RoleId, listItems, "Select Role", new { @class = "form-control" })

        </div>
    </div>
}
